{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "stopOnEntry": false,
            "args": ["${workspaceRoot}/dist/test/**/*.js", "--recursive", "--compilers", "js:babel-register"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "externalConsole": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/dist"
        }
    ]
}